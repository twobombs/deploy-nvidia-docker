# X-run script for non-nvidia hosts

export LIBGL_ALWAYS_SOFTWARE=1&&Xvfb :0 -screen 0 1280x720x24 -ac&
sleep 10
export DISPLAY=:0&&startxfce4&
sleep 10
x0vncserver -display :0 -passwordfile ~/.vnc/passwd&
libvirtd -d && service virtlogd start && service libvirt-bin start
/root/noVNC/utils/launch.sh --vnc localhost:5900
echo "done"
read n -1
